<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate"
    tools:context="dev.theodo.red.tinybreak.ScoringActivity">

    <TextView
        android:id="@+id/team1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/team1"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1Name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/p1_hint"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/p1Score"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team1Name" />

    <TextView
        android:id="@+id/p2Name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/p2_hint"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/p2Score"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1Name" />

    <TextView
        android:id="@+id/team1Score"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/gainsboro"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p2Score"
        app:layout_constraintTop_toTopOf="@+id/p1Name" />

    <TextView
        android:id="@+id/p1Score"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/team1Score"
        app:layout_constraintTop_toTopOf="@+id/p1Name" />

    <TextView
        android:id="@+id/p2Score"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/team1Score"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p2Name"
        app:layout_constraintTop_toTopOf="@+id/p2Name" />

    <TextView
        android:id="@+id/team2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/team2"
        android:textAllCaps="true"
        android:textColor="@color/terracotta"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2Name" />

    <TextView
        android:id="@+id/p3Name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/p3_hint"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/p3Score"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team2Name" />

    <TextView
        android:id="@+id/p3Score"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/team2Score"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p3Name"
        app:layout_constraintTop_toTopOf="@+id/p3Name" />

    <TextView
        android:id="@+id/team2Score"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/gainsboro"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p3Score"
        app:layout_constraintTop_toTopOf="@+id/p3Score" />

    <TextView
        android:id="@+id/p4Score"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/team2Score"
        app:layout_constraintTop_toTopOf="@+id/p4Name" />

    <TextView
        android:id="@+id/p4Name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/p4_hint"
        android:textColor="@color/gainsboro"
        app:layout_constraintEnd_toStartOf="@+id/p4Score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p3Name" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:background="@color/yellow"
        android:onClick="yellow"
        app:layout_constraintEnd_toStartOf="@+id/brown"
        app:layout_constraintTop_toTopOf="@+id/brown" />

    <Button
        android:id="@+id/brown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:background="@color/brown"
        android:onClick="brown"
        app:layout_constraintEnd_toStartOf="@+id/green"
        app:layout_constraintTop_toTopOf="@+id/green" />

    <Button
        android:id="@+id/blue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/blue"
        android:onClick="blue"
        app:layout_constraintStart_toStartOf="@+id/brown"
        app:layout_constraintTop_toBottomOf="@+id/brown" />

    <Button
        android:id="@+id/green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:background="@color/green"
        android:onClick="green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team2Score" />

    <Button
        android:id="@+id/pink"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/pink"
        android:onClick="pink"
        app:layout_constraintStart_toStartOf="@+id/blue"
        app:layout_constraintTop_toBottomOf="@+id/blue" />

    <Button
        android:id="@+id/black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        android:onClick="black"
        app:layout_constraintStart_toStartOf="@+id/pink"
        app:layout_constraintTop_toBottomOf="@+id/pink" />

    <Button
        android:id="@+id/button7"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:onClick="nextPlayer"
        android:text="@string/next_player_button"
        app:layout_constraintEnd_toStartOf="@+id/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow" />

    <Button
        android:id="@+id/button8"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:onClick="foul"
        android:text="@string/foul_button"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:onClick="endFrame"
        android:text="@string/end_frame_button"
        app:layout_constraintStart_toStartOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@color/red"
        android:onClick="red"
        app:layout_constraintBottom_toBottomOf="@+id/yellow"
        app:layout_constraintEnd_toStartOf="@+id/yellow"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/yellow" />

</android.support.constraint.ConstraintLayout>
